#include <bits/stdc++.h>
using namespace std ; 


int main(){
    string  s ; cin >> s ;
    stack<char> st ;
    stack<char> st2  ;
    int dem = 0  ;
    for(char x : s ){
        if(x==')') st2.push(x)   ;
        if(x=='(') st.push(x) ;
        if(x==')' && !st.empty()){
            st.pop()  ;
            dem++ ;
        }
    }
    cout << st.size()  + st2.size() - dem  ; 
}
